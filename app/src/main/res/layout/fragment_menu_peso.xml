<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dann.pcsilos.MenuPeso">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constrain_peso"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/recu_peso_hora"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="9dp"
                app:layout_constraintBottom_toTopOf="@+id/card_consumo_hora"
                app:layout_constraintEnd_toStartOf="@+id/card_consumo_hora"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                layout_constraintBottom_toTopOf="@+id/card_consumo_hora"
                layout_constraintEnd_toStartOf="@+id/card_consumo_hora" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_consumo_hora"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="32dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_consumo_diario"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_consumo_hora"
                layout_constraintTop_toBottomOf="@+id/card_consumo_hora" />

            <android.support.v7.widget.CardView
                android:id="@+id/recu_peso_diario"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="9dp"
                app:layout_constraintBottom_toTopOf="@+id/card_consumo_diario"
                app:layout_constraintEnd_toStartOf="@+id/card_consumo_diario"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_consumo_hora"
                app:layout_constraintVertical_bias="0.0"
                layout_constraintTop_toBottomOf="@+id/card_consumo_hora"
                layout_constraintBottom_toTopOf="@+id/card_consumo_diario"
                layout_constraintEnd_toStartOf="@+id/card_consumo_diario" />

            <android.support.v7.widget.CardView
                android:id="@+id/recu_peso_mensual"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="9dp"
                app:layout_constraintEnd_toStartOf="@+id/card_peso_mensual"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_consumo_diario"
                layout_constraintTop_toBottomOf="@+id/card_consumo_diario" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_peso_mensual"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/card_consumo_diario"
                layout_constraintTop_toBottomOf="@+id/card_consumo_diario" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_peso_anual"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/card_peso_mensual" />

            <android.support.v7.widget.CardView
                android:id="@+id/recu_peso_anual"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardElevation="9dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_peso_mensual" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
