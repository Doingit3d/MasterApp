<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dann.pcsilos.MenuPeso">


    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/cardview_light_background">

            <com.tmall.ultraviewpager.UltraViewPager
                android:id="@+id/ultra_viewpager_peso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constrain_peso"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/recu_peso_hora"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardElevation="9dp"
                        app:layout_constraintBottom_toTopOf="@+id/card_peso_hora"
                        app:layout_constraintEnd_toStartOf="@+id/card_peso_hora"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_peso_hora"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="48dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_peso_hora"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_peso_dia"
                                    tools:text="@string/tv_peso_dia" />

                                <TextView
                                    android:id="@+id/tv_fecha_peso_hora"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_fecha_peso_dia"
                                    tools:text="@string/tv_fecha_peso_dia" />
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_peso_diario"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_hora">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_peso_dia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_peso_dia"
                                    tools:text="@string/tv_peso_dia" />

                                <TextView
                                    android:id="@+id/tv_fecha_peso_dia"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_fecha_peso_dia"
                                    tools:text="@string/tv_fecha_peso_dia" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/recu_peso_diario"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardElevation="9dp"
                        app:layout_constraintBottom_toTopOf="@+id/card_peso_diario"
                        app:layout_constraintEnd_toStartOf="@+id/card_peso_diario"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_hora"
                        app:layout_constraintVertical_bias="0.0" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/recu_peso_mensual"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardElevation="9dp"
                        app:layout_constraintEnd_toStartOf="@+id/card_peso_mensual"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_diario" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_peso_mensual"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_diario">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_peso_mes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_peso_dia"
                                    tools:text="@string/tv_peso_dia" />

                                <TextView
                                    android:id="@+id/tv_fecha_peso_mes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_fecha_peso_dia"
                                    tools:text="@string/tv_fecha_peso_dia" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_peso_anual"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_mensual">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:orientation="horizontal">

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_peso_ano"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_peso_dia"
                                    tools:text="@string/tv_peso_dia" />

                                <TextView
                                    android:id="@+id/tv_fecha_peso_ano"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_fecha_peso_dia"
                                    tools:text="@string/tv_fecha_peso_dia" />
                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/recu_peso_anual"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardElevation="9dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/card_peso_mensual" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/type_peso_hora"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/recu_peso_hora"
                        app:layout_constraintStart_toEndOf="@+id/recu_peso_hora" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/report_peso_hora"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/type_peso_hora"
                        app:layout_constraintStart_toEndOf="@+id/type_peso_hora" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/type_peso_dia"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/recu_peso_diario"
                        app:layout_constraintStart_toEndOf="@+id/recu_peso_diario" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/report_peso_dia"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/type_peso_dia"
                        app:layout_constraintStart_toEndOf="@+id/type_peso_dia" />


                    <android.support.v7.widget.CardView
                        android:id="@+id/type_peso_mensual"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/recu_peso_mensual"
                        app:layout_constraintStart_toEndOf="@+id/recu_peso_mensual" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/report_peso_mensual"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/type_peso_mensual"
                        app:layout_constraintStart_toEndOf="@+id/type_peso_mensual" />


                    <android.support.v7.widget.CardView
                        android:id="@+id/type_peso_anual"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/recu_peso_anual"
                        app:layout_constraintStart_toEndOf="@+id/recu_peso_anual" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/report_peso_anual"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@android:color/holo_green_dark"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/type_peso_anual"
                        app:layout_constraintStart_toEndOf="@+id/type_peso_anual" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/graf_peso_hora"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardElevation="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/card_peso_hora"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_peso_hora"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/graf_peso_dia"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardElevation="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/card_peso_diario"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_peso_dia"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/graf_peso_mes"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardElevation="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/card_peso_mensual"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_peso_mes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/graf_peso_ano"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="@color/cardview_light_background"
                        app:cardElevation="5dp"
                        app:layout_constraintBottom_toBottomOf="@+id/card_peso_anual"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">


                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chart_peso_ano"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.v7.widget.CardView>

                </android.support.constraint.ConstraintLayout>


            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
